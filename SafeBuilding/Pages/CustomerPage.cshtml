@page
@model SafeBuilding.Pages.CustomerCrud.IndexModel
@{
    ViewData["Title"] = "Customer page";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<p>
    <a asp-page="./CustomerCrud/Create">Create New</a>
</p>
<div style="margin-bottom:60px">
    <table class="table table-hover">
        <thead class="bg-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].CitizenId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].DateJoin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Fullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CitizenId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateJoin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td style="width:20%">
                        <a asp-page="./CustomerCrud/Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                        <a asp-page="./CustomerCrud/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
