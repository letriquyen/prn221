@page
@model SafeBuilding.Pages.FacilityCrud.CreateModel

<h4>Facility</h4>
<hr />
<div class="row" id="main-content">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Facility.Item" class="control-label"></label>
                <input asp-for="Facility.Item" class="form-control" />
                <span asp-validation-for="Facility.Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.Quantity" class="control-label"></label>
                <input asp-for="Facility.Quantity" class="form-control" />
                <span asp-validation-for="Facility.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.Status" class="control-label"></label>
                <input asp-for="Facility.Status" class="form-control" />
                <span asp-validation-for="Facility.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-button">
    <a asp-page="/FacilityPage" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
