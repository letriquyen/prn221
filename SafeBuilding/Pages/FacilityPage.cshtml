@page
@model SafeBuilding.Pages.FacilityCrud.IndexModel
@{
    ViewData["Title"] = "Facility page";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<p>
    <a asp-page="./FacilityCrud/Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Facility[0].Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Facility) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./FacilityCrud/Edit" asp-route-id="@item.Id">Edit</a> ||
                <a asp-page="./FacilityCrud/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
