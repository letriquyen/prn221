                @Html.DisplayNameFor(model => model.Invoice[0].Management)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Parking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>
