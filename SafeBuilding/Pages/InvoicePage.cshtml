<p>
    <a asp-page="./InvoiceCrud/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Rent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Water)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Electricity)
            </th>
