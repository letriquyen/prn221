@page
@model SafeBuilding.Pages.FlatCrud.CreateModel
@{
    ViewData["Title"] = "Flat page";
}
<h4>Flat</h4>
<hr />
<div class="row" id="main-content">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flat.Detail" class="control-label"></label>
                <input asp-for="Flat.Detail" class="form-control" />
                <span asp-validation-for="Flat.Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flat.Price" class="control-label"></label>
                <input asp-for="Flat.Price" class="form-control" />
                <span asp-validation-for="Flat.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flat.RoomNumber" class="control-label"></label>
                <input asp-for="Flat.RoomNumber" class="form-control" />
                <span asp-validation-for="Flat.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flat.Status" class="control-label"></label>
                <select asp-for="Flat.Status">
                    <option value="AVAILABLE" selected>AVAILABLE</option>
                    <option value="UNAVAILABLE">UNAVAILABLE</option>
                </select>
                <span asp-validation-for="Flat.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flat.BuildingId" class="control-label"></label>
                <select asp-for="Flat.BuildingId" class="form-control" asp-items="ViewBag.BuildingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Flat.FlatTypeId" class="control-label"></label>
                <select asp-for="Flat.FlatTypeId" class="form-control" asp-items="ViewBag.FlatTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-button">
    <a asp-page="/FlatPage" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
