@page
@model SafeBuilding.Pages.FlatTypeCrud.CreateModel
@{
    ViewData["Title"] = "FLat Type page";
}
<h4>FlatType</h4>
<hr />
<div class="row" id="main-content">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlatType.Id" class="control-label"></label>
                <input asp-for="FlatType.Id" class="form-control" />
                <span asp-validation-for="FlatType.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatType.Description" class="control-label"></label>
                <input asp-for="FlatType.Description" class="form-control" />
                <span asp-validation-for="FlatType.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatType.Name" class="control-label"></label>
                <input asp-for="FlatType.Name" class="form-control" />
                <span asp-validation-for="FlatType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatType.Status" class="control-label"></label>
                <select asp-for="FlatType.Status">
                    <option value="ACTIVE" selected>ACTIVE</option>
                    <option value="INACTIVE">INACTIVE</option>
                </select>
                <span asp-validation-for="FlatType.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-button">
    <a asp-page="/FlatTypePage" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
