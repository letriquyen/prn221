@page
@model SafeBuilding.Pages.ServiceCrud.IndexModel
@{
    ViewData["Title"] = "Service page";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<p>
    <a asp-page="./ServiceCrud/Create">Create New</a>
</p>

<form asp-page="/ServicePage" method="get">  

    <div class="form-actions no-color">  
        <p>  
            Find by Service name: <input type="text" name="SearchString" value="@Model.CurrentFilter" />  
            <input type="submit" value="Search" class="btn btn-primary" /> ||  
            <a asp-page="/ServicePage">Back to full List</a>  
        </p>  
    </div>  
</form>

<div style="margin-bottom:60px"> 
    <table class="table table-hover">
        <thead class="bg-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Service)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./ServiceCrud/Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> ||
                        <a asp-page="./ServiceCrud/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>