@page
@model SafeBuilding.Pages.RentContractCrud.IndexModel
@{
	ViewData["Title"] = "Rent Contract page";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<p>
	<a asp-page="./RentContractCrud/Create">Create New</a>
</p>
<table class="table table-hover">
	<thead class="bg-primary">
		<tr>
			<th>
				@Html.HiddenFor(model => model.RentContract[0].Contract)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RentContract[0].Flat.Building.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RentContract[0].Flat.RoomNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RentContract[0].Customer.Fullname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RentContract[0].Value)
			</th>
			<th>
				Duration
			</th>

			<th>
				@Html.DisplayNameFor(model => model.RentContract[0].Status)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.RentContract)
		{
			<tr>
				<td>
					@Html.HiddenFor(modelItem => item.Contract)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Flat.Building.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Flat.RoomNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Customer.Fullname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Value)
				</td>
				<td>
					From @Html.DisplayFor(modelItem => item.ExpiryDate)
					<br />
					To @Html.DisplayFor(modelItem => item.StartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<a asp-page="./RentContractCrud/Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./RentContractCrud/Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
