@page "/Index"
@using Repository.Models;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">File Upload</h1>
</div>
<div>
    <div class="mb-3 mt-3">
        <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
            <div class="mb-3">
                <label class="form-label">UploadFile</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" class=" btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>

@if(Model.Invoices == null)
{
}
else
@if (Model.Invoices.Count() > 0)
{
    <hr />
    <table cellpadding="10" , cellspacing="10" , border="1">
        @foreach (Invoice invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.rent</td>
                <td>@invoice.water</td>
                <td>@invoice.electicity</td>
                <td>@invoice.management</td>
                <td>@invoice.parking</td>
                <td>@invoice.email</td>
            </tr>
        }
    </table>
}
